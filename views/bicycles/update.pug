extends ../layout

block content
    a(href='/bicycles') Volver

    br
    br
    br

    h1 Editing a Bicycle

    br
    br

    form(action="/bicycles/"+bike.id+"/update" method='POST')
        label(for="code") ID:
        input#id(type='text' name='code' value=bike.code)
        br
        label(for="color") Color:
        input#color(type='text' name='color' value=bike.color)
        br
        label(for="model") Model:
        input#model(type='text' name='model' value=bike.model)
        br
        label(for="latitude") Latitude:
        input#latitude(type='text' name='latitude' value=bike.ubication[0])
        br
        label(for="longitude") Longitude:
        input#longitude(type='text' name='longitude' value=bike.ubication[1])
        br
        br
        input.btn(type="submit" value="OK")